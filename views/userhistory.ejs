        files: [
          { name: 'ผลการรักษา_00011.pdf', type: 'pdf', size: '1.9 MB', uploadDate: '18/08/2025' },
          { name: 'ใบรับรองการรักษา_00011.pdf', type: 'pdf', size: '0.5 MB', uploadDate: '18/08/2025' }
        ]
