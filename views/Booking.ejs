    function loadServices() {
      const container = document.getElementById('servicesContainer');
      container.innerHTML = '';

      servicesFromDB.forEach(service => {
        const card = document.createElement('label');
        card.className = 'service-card';
        card.dataset.id = service.id;
        card.dataset.service = service.service_name;
        card.dataset.price = service.price;

        card.innerHTML = `
          <span class="service-label">
            <input type="radio" name="service" value="${service.service_name}"> ${service.service_name}
          </span>
          <span class="service-price">${service.price} บาท</span>
        `;

        card.addEventListener('click', () => {
          document.querySelectorAll('.service-card').forEach(c => c.classList.remove('selected'));
