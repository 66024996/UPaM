            </div>
        </div>

        <!-- Services Section -->
        <div class="services-section">
            <h2 class="section-title">บริการการจองคิวของเรา</h2>
            <div class="services-grid">
                <div class="service-card physiotherapy"  onclick="bookService('physiotherapy')">
